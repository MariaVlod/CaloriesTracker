@model CaloriesTracker.Models.ViewModels.DailyReportViewModel

@{
    ViewData["Title"] = "Daily Calorie Report";
    Layout = "_Layout";
      
}

<div class="report-header">
    <h1>Daily Calorie Report</h1>
    <h2>@Model.Date:yyyy-MM-dd</h2>
</div>

<div class="summary">
    <h3>Summary</h3>
    <p>
        Total Calories: @Model.TotalCalories:F0
        / @Model.DailyGoal:F0
    </p>
    <div class="progress-container" style="width:100%; background:#f1f1f1;">
        <div class="progress-bar" style="
            width:@(Math.Min(100, Model.TotalCalories/Model.DailyGoal*100))%;
            height:30px; background:#4CAF50;
            text-align:center; line-height:30px; color:white;">
            @(Math.Round(Model.TotalCalories / Model.DailyGoal * 100, 1))%
        </div>
    </div>
    <p>Protein: @Model.TotalProtein:F1 g</p>
    <p>Fat:     @Model.TotalFat:F1 g</p>
    <p>Carbs:   @Model.TotalCarbs:F1 g</p>
</div>

<h3>Consumed Products</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity (g)</th>
            <th>Calories</th>
            <th>Protein (g)</th>
            <th>Fat (g)</th>
            <th>Carbs (g)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.ConsumedProducts)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.Quantity:F1</td>
                <td>@p.Calories:F1</td>
                <td>@p.Protein:F1</td>
                <td>@p.Fat:F1</td>
                <td>@p.Carbs:F1</td>
            </tr>
        }
    </tbody>
</table>
