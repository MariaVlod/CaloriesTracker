@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Edit Product</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CaloriesPer100g" class="form-label"></label>
                            <input asp-for="CaloriesPer100g" class="form-control" />
                            <span asp-validation-for="CaloriesPer100g" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProteinPer100g" class="form-label"></label>
                            <input asp-for="ProteinPer100g" class="form-control" />
                            <span asp-validation-for="ProteinPer100g" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FatPer100g" class="form-label"></label>
                            <input asp-for="FatPer100g" class="form-control" />
                            <span asp-validation-for="FatPer100g" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CarbsPer100g" class="form-label"></label>
                            <input asp-for="CarbsPer100g" class="form-control" />
                            <span asp-validation-for="CarbsPer100g" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
